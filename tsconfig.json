{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "baseUrl": "src",
  "paths": {
    "@components/": ["components/*"],
    "@services/": ["services/*"],
    "@routes/": ["routes/*"],
    "@util/": ["util/*"],
    "@/": ["/"]
  }
}